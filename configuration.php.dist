class Vr360Configuration extends Vr360Object
{
	public $dbName = 'vr360_dev';
	public $dbUser = 'root';
	public $dbPassword = 'root';
	public $dbServer = 'localhost';
	public $siteName = 'Vr360 - Globalvision';

	public $allowMimeTypes = array('image/png', 'image/jpeg');

	public $salt = '';
