	public static function getInstance()
	{
		static $instance;
		if (empty($instance))
		{
			$instance = new Vr360Configuration();
		}

		return $instance;
	}

	public static function getConfig($property, $default = null)
	{
		$instance = self::getInstance();

		return $instance->get($property, $default);
	}
}
